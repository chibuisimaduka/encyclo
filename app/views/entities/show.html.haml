    #associations
      - associations_by_def.each do |definition, associations|
        .association_by_definition= render partial: "associations/association", locals: {definition: definition, associations: associations, entity: @entity}
  #entities
    - if @entity.is_intermediate
      - for entity in @entities
        .associations
          - associations_by_definition(entity, []).each do |definition, associations|
            .association_by_definition= render partial: "associations/association", locals: {definition: definition, associations: associations, entity: entity}
    - else
