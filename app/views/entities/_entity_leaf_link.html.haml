= "|"*nested
= link_to(opened ? "-" : "+", toggle_entity_path(id: entity.id, format: :js, nested: nested, editable: editable), {method: :put, remote: true})
- if editable && editable != 'false'
  = best_in_place entity, :name
  = link_to_function "[a]", "toggle_visibility('change_entity_parent_#{entity.id}');"
  = link_to "[s]", entity_path(entity)
- else
  = link_to entity_name(entity), entity_path(entity, filter: params[:filter])
