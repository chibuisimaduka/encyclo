= form_for(AssociationDefinition.new) do |f|
  .fields
    = f.hidden_field :entity_id, :value => entity.id, id: "entity_id"
    = f.hidden_field :associated_entity_id, id: "associated_entity_id"
    Many?
    = f.check_box :entity_has_many
    Other many?
    = f.check_box :associated_entity_has_many
    = autocomplete_field_tag :associated_entity_name, '', autocomplete_entity_name_entities_path, id: "add_association_definition_field", id_element: "#associated_entity_id"
  .actions
    = f.submit "Add definition"
